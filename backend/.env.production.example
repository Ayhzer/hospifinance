# Configuration MongoDB Atlas (Production)
# Remplacez avec votre chaîne de connexion MongoDB Atlas
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/hospifinance?retryWrites=true&w=majority
MONGODB_DB_NAME=hospifinance

# Configuration serveur
PORT=10000
NODE_ENV=production

# Configuration JWT (IMPORTANT: Générez un secret sécurisé)
# Utilisez: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_super_secure_jwt_secret_here_min_32_characters
JWT_EXPIRES_IN=7d

# Configuration CORS
# L'URL de votre frontend GitHub Pages
CORS_ORIGIN=https://ayhzer.github.io
